{
  "name": "referendum",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "[ -n \"$CI\" ] || [ -n \"$EAS_BUILD\" ] || npx only-allow yarn",
    "postinstall": "[ -n \"$CI\" ] || [ -n \"$EAS_BUILD\" ] || husky",
    "pre-commit": "lint-staged",
    "pre-push": "tsc --noEmit",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "type-check": "tsc",
    "test": "[ -n \"$CI\" ] || [ -n \"$EAS_BUILD\" ] || jest",
    "ios:devices": "xcrun simctl list devices",
    "ios:default": "xcrun simctl create 'default' 'iPhone SE (3rd generation)'",
    "ios:build": "eas build --profile development --platform ios --local --output ./ios/build.tar.gz --clear-cache && tar -xzf ./ios/build.tar.gz -C ./ios/",
    "ios:boot": "xcrun simctl boot default && open -a Simulator",
    "ios:install": "xcrun simctl install booted ./ios/referendum.app",
    "ios:launch": "xcrun simctl launch default referendum.app & npx expo start --ios --dev-client --clear",
    "ios:reinstall": "yarn ios:install && yarn ios:server",
    "ios:start": "yarn ios:boot && yarn ios:install && yarn ios:server",
    "ios:run": "yarn ios:build && yarn ios:start",
    "ios:kill": "killall Simulator && killall com.apple.CoreSimulator.CoreSimulatorService",
    "ios:shutdown": "xcrun simctl shutdown default && yarn ios:kill",
    "ios:uninstall": "xcrun simctl uninstall default referendum.app",
    "ios:clean": "yarn ios:uninstall && yarn ios:shutdown && rm -rf ./ios",
    "ios:rebuild": "yarn ios:kill && rm -rf ./ios && yarn ios:run",
    "android:devices": "emulator -list-avds",
    "android:default": "sdkmanager --install \"system-images;android-33;google_apis_playstore;x86_64\" && avdmanager create avd --name \"default\" --package \"system-images;android-33;google_apis_playstore;x86_64\" --device \"pixel_7\"",
    "android:build": "npx expo prebuild --platform android && ./android/gradlew assembleDebug",
    "android:boot": "emulator -avd default -no-snapshot-load -no-snapshot-save && adb start-server",
    "android:install": "adb install ./android/app/build/outputs/apk/debug/app-debug.apk",
    "android:launch": "npx expo start --android --dev-client --clear",
    "android:reinstall": "adb install -r ./android/app/build/outputs/apk/debug/app-debug.apk",
    "android:start": "yarn android:boot && yarn android:install && yarn android:launch",
    "android:run": "yarn android:build && yarn android:start",
    "android:shutdown": "adb emu kill && adb kill-server",
    "android:uninstall": "adb uninstall com.referendum.app",
    "android:clean": "yarn android:uninstall && yarn android:shutdown && rm -rf ./android",
    "android:rebuild": "yarn android:shutdown && rm -rf ./android && yarn android:run"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.3",
    "@react-native/typescript-config": "0.75.3",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@redux-devtools/core": "^4.0.0",
    "@reduxjs/toolkit": "^2.2.7",
    "date-fns": "^4.1.0",
    "expo": "51.0.39",
    "expo-dev-client": "~4.0.28",
    "expo-splash-screen": "~0.27.7",
    "immutable": "^4.3.4",
    "lucide-react": "^0.441.0",
    "metro-react-native-babel-transformer": "^0.77.0",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "react-native-svg-transformer": "^1.5.0",
    "react-redux": "^9.1.2",
    "react-test-renderer": "18.2.0",
    "redux": "^5.0.1",
    "redux-devtools-expo-dev-plugin": "^0.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.75.3",
    "@react-native/eslint-config": "0.75.3",
    "@react-native/metro-config": "0.75.3",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.8.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.7",
    "@types/react": "~18.2.79",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "eas-cli": "13.1.1",
    "eslint": "^8.19.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "husky": "^9.1.6",
    "jest": "^29.6.3",
    "lint-staged": "^15.2.10",
    "prettier": "2.8.8",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "expo-modules-autolinking": "1.11.3"
  }
}
