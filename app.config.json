{
  "expo": {
    "owner": "referendum",
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/OpenSans-Regular.ttf",
            "./src/assets/fonts/Inter-Regular.ttf",
            "./src/assets/fonts/Inter-Medium.ttf",
            "./src/assets/fonts/InterDisplay-Bold.ttf"
          ]
        }
      ]
    ],
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "extra": {
      "eas": {
        "projectId": "6bc5786b-adc9-476a-a4aa-4516db7d3936"
      },
      "android": {
        "EXPO_PUBLIC_API_URL": "http://10.0.2.2"
      },
      "ios": {
        "EXPO_PUBLIC_API_URL": "http://localhost"
      }
    },
    "icon": "./src/assets/referendum_icon.png",
    "splash": {
      "image": "./src/assets/referendum_icon.png",
      "backgroundColor": "#FFFFFF"
    },
    "android": {
      "package": "com.referendum.referendumapp",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/referendum_icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "ios": {
      "bundleIdentifier": "com.referendum.referendumapp"
    }
